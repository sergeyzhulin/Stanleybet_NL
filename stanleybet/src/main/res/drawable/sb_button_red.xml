<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape>
            <stroke android:width="1dp" android:color="#FF404040" />
            <corners android:radius="4dp" />
            <gradient
                android:startColor="@color/sb_menu_item_top"
                android:endColor="@color/sb_menu_item_bottom"
                android:angle="270" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <stroke android:width="1dp" android:color="#FF404040" />
            <corners android:radius="4dp" />
            <gradient
                android:startColor="@color/sb_menu_item_top"
                android:endColor="@color/sb_menu_item_bottom"
                android:angle="270" />
        </shape>
    </item>
    <item>
        <shape>
            <stroke android:width="1dp" android:color="#FF404040" />
            <corners android:radius="4dp" />
            <gradient
                android:startColor="@color/sb_red_buttom_item_top"
                android:endColor="@color/sb_red_buttom_item_bottom"
                android:angle="270" />
        </shape>
    </item>
</selector>