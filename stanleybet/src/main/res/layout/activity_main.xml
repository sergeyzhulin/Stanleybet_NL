<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/activatedBackgroundIndicator"
    package="lt.appcamp.stanleybet.activities"
    tools:context="lt.appcamp.stanleybet.activities.MainActivity">

    <!-- The main content view -->
    <lt.appcamp.stanleybet.views.LockedViewPager
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="lt.appcamp.stanleybet.activities.MainActivity"/>

    <!-- The navigation drawer -->
    <ListView android:id="@+id/left_drawer"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:choiceMode="singleChoice"
        android:divider="@color/sb_dark_grey"
        android:dividerHeight="1dp"
        android:background="@color/sb_menu_background"
        android:listSelector="@drawable/sb_menu_selector"
        android:drawSelectorOnTop="false"
        android:clickable="true"
        android:headerDividersEnabled="false"
        android:footerDividersEnabled="false"
        android:focusableInTouchMode="false" />
</android.support.v4.widget.DrawerLayout>
