<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    package="lt.appcamp.stanleybet.activities"
    tools:context="lt.appcamp.stanleybet.activities.LoginActivity"
    android:orientation="vertical"
    android:background="@color/sb_login_background_color"
    android:padding="@dimen/margin">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/margin_mid"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="@dimen/margin_small"
        android:text="@string/sb_logged_in_label"
        android:textSize="18sp"
        android:textColor="@color/sb_login_chexbox_text_color"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/user_name"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:text="StanleyBet"
        android:padding="@dimen/margin_mid"
        android:layout_marginBottom="@dimen/margin_small"
        android:textIsSelectable="true" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_small">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/sb_login_chexbox_text_color"
            android:text="@string/sb_logged_in_balance_label"
            android:padding="@dimen/margin_mid"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="false"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/user_balance_sum"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:text="70000 Lt"
            android:padding="@dimen/margin_mid"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/deposit_button"
        android:text="@string/sb_logged_in_button_deposit"
        android:layout_gravity="center"
        android:background="@drawable/sb_button_grey"
        android:layout_marginBottom="@dimen/margin_small"
        android:textColor="@color/white" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/continue_button"
        android:text="@string/sb_logged_in_button_continue"
        android:layout_gravity="center"
        android:background="@drawable/sb_button_grey"
        android:layout_marginBottom="@dimen/margin_small"
        android:onClick="onClickContinue"
        android:textColor="@color/white" />

</LinearLayout>